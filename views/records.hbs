<body>
    <header>
        <div class="container headClass">
            <div class="row">
                <div class="col-md-6">
                    <a href="/records" class="logo"><img class="ricky" src="images/logo1.png" width=30% height=15% alt="Third slide"></a>
                </div>
                <div class="col-md-6 text-right">

                    <div class="nav navbar-nav navbar-right">
                        <button type="submit" id="logoutButton" class="btn btn-primary btn-lg" style="font-family: 'Palanquin Dark', sans-serif;">Log Out</button>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </header>


    <div class="container">
        <div class="row">
            <h1 class="text-center">Medical Records</h1>
            <br>
            <div class="row">
                {{#each records}}

                    <div class="col-sm-10 col-sm-offset-1 col-md-5 col-md-offset-1">
                        <div class="service thumbnail">
                            <img src="/images/{{this.picture}}" alt="...">
                            <div class="caption text-center">
                                <h3>{{this.name}}</h3>

                            </div>
                            <div class="caption text-center">
                            <button name="{{this.id}}" class="btn btn-primary btn-lg notesButton">View Notes</button>
                            <button name="{{this.id}}" class="btn btn-primary btn-lg editRecordButton">Edit</button>
                            <button name="{{this.id}}" class="btn btn-primary btn-lg deleteRecordButton">Delete</button>
                          </div>
                        </div>

                    </div>
                {{/each}}

                <div class="col-sm-10 col-sm-offset-1 col-md-5 col-md-offset-1">
                    <div class="service thumbnail">
                        <img src="/images/add.png" alt="...">
                        <div class="caption text-center">

                            <h3>Add Record</h3>

                            <button type="button" class="btn btn-primary btn-lg" id="addRecord">+</button>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>

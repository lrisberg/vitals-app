<body>
<div class="container" >
    <h1 class="text-center">{{record.name}}</h1>
    <br>
    <h5>Doctor Name: {{record.docname}}</h5>
<br>

    <!-- <h3>Notes</h3> -->

    {{#each notes}}

      <div class="media">
        <a class="pull-left" href="#">
                        <img class="media-object" src="/images/clipboard.png" alt="">
        </a>
        <div class="media-body">
          <h4 class="media-heading">
            <small>{{this.created_at}}</small>
          </h4>
        <h6>
    {{this.body}}
  </h6>
</div>
</div>



  <button class="btn btn-primary btn-lg deleteNoteButton" value="{{this.id}}" type="submit">Delete</button>
  <button class="btn btn-primary btn-lg editNoteButton" value="{{this.id}}" type="submit">Edit</button>
    {{/each}}
    <br>



    <h1>Add a new note:</h1>
    <form>
        <textarea id="noteText" rows="4" cols="50"></textarea>
        <input id="recordId" type="hidden" name="recordId" value="{{this.recordId}}">
        <br>
        <input class="btn btn-primary btn-lg" id="addNoteButton" type="submit" value="Submit">
    </form>

</div>
</div>

           <div class="form-group">
               <input id="loginEmail" type="email" class="form-control" style="font-family: 'Palanquin Dark', sans-serif;" name="username" placeholder="email">
           </div>
           <div class="form-group">
               <input id="loginPassword" type="password" class="form-control" style="font-family: 'Palanquin Dark', sans-serif;" name="password" placeholder="Password">

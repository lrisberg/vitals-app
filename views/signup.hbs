<body class = "signup">
  <nav class="amber lighten-2" role="navigation">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">
        <span class="logo-text scriptFont">Vitals</span>
      </a>

      <ul class="right hide-on-med-and-down">
        <li><a href="/index.html">Home</a></li>
        <li class="firstNavItem"></li>
        <li class="secondNavItem"></li>
      </ul>
  </nav>
</div>
<div class = "row">
<div class="col s12 m12">
<h2 class="center white-text signFont">Sign Up!</h2>
<h5 class="center scriptFont2 white-text">See what the fuss is about! Sign up today!</h5>
</div>
</div>

<div id="index-banner" class="galvanize_container">
      <div id="container" class="container">

</div>
        <div class="row">
          <form id="signUpForm" class="col offset-s2 s8">
            <div class="card">
              <div class="card-content">

                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="First Name" id="firstName" type="text" class="validate">
                    <label for="fname">First Name</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Last Name" id="lastName" type="text" class="validate">
                    <label for="lname">Last Name</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Email" id="email" type="text" class="validate">
                    <label for="email">Email</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Password" id="password" type="password" class="validate">
                    <label for="password">Password</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Age" id="age" type="number" class="validate">
                    <label for="age">Age</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Gender" id="gender" type="text" class="validate">
                    <label for="gender">Gender</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Height" id="height" type="number" class="validate">
                    <label for="height">Height</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s12">
                    <input placeholder="Weight" id="weight" type="number" class="validate">
                    <label for="weight">Weight</label>
                  </div>
                </div>

              </div>

              <div class="card-action center">
                <button class="amber lighten-2 waves-effect waves-light btn-large" type="submit" name="action" id="signUp">
                  Sign up
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <footer class="amber lighten-2 page-footer">
            <div class="container">
                <div class="row">
                    <div class="col l6 s6">
                        <h5 class="white-text scriptFont">Vitals</h5>
                    </div>

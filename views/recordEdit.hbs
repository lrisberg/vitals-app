<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>

    <script src="/js/recordEdit.js" type="text/javascript"></script>

    <title>Edit Record</title>
  </head>
  <h1>Edit Record</h1>
  <body>
    <form id="editRecordForm" method="post">
      <input id="recordName" type="text" name="name" value="{{this.record.name}}" placeholder="Enter a name">
      <br>
      <input id="recordDocName" type="text" name="docName" value="{{this.record.docname}}" placeholder="Enter your doctor's name">
      <br>
      <input id="recordPicture" type="text" name="picture" value="{{this.record.picture}}" placeholder="Enter a URL">
      <br>
      <input id="recordId" type="hidden" name="id" value="{{this.record.id}}">
      <br>
      <button id="editRecordButton" type="submit">Submit</button>
    </form>
  </body>
</html>

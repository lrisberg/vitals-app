<body>

    <header>
        <div class="container headClass">
            <div class="row">
                <div class="row">
                    <div class="col-md-6">
                        <a href="/records" class="logo"><img class="ricky" src="/images/logo1.png" width=30% height=15% alt="Third slide"></a>
                    </div>

                    <div class="col-md-6 text-right">
                        <div class="nav navbar-nav navbar-right">
                            <div class="nav navbar-nav navbar-right">
                                <button type="submit" id="logoutButton" class="btn btn-primary btn-lg" style="font-family: 'Palanquin Dark', sans-serif;">Log Out</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>















    <h1 class="center">Edit Record</h1>
    <br>
    <div class="container center">
            <form id="editRecordForm" class="right" method="post">
              <div class="form-group row">

                <div class="form-group row">
                    <label for="exampleSelect1" class="col-sm-1 col-xs-10 col-form-label">Name</label>
                    <div class="col-sm-4">
              <select class="form-control" id="recordName" required>
            <option {{selected.Cardiologist}}>Cardiologist</option>
            <option {{selected.Dentist}}>Dentist</option>
            <option {{selected.GeneralPractitioner}}>General Practitioner</option>
            <option {{selected.Gynecologist}}>Gynecologist</option>
            <option {{selected.Optometrist}}>Optometrist</option>
            <option {{selected.Orthodontist}}>Orthodontist</option>
            <option {{selected.Pathologist}}>Pathologist</option>
            <option {{selected.Pediatrician}}>Pediatrician</option>
            <option {{selected.Prescriptions}}>Prescriptions</option>
            <option {{selected.TestResults}}>Test Results</option>
            <option {{selected.Urologist}}>Urologist</option>
          </select>
        </div>
      </div>


<div class="form-group row">
  <label for="doctor" class="col-sm-1 col-xs-10 col-form-label">Doctor's Name</label>

<div class="col-sm-4">

                <input class="form-control" id="recordDocName" type="text" name="docName" value="{{this.record.docname}}" placeholder="Your doctor's name">
                <br>
                <input id="recordId" type="hidden" name="id" value="{{this.record.id}}">
                <br>
                <button id="editRecordButton" class="btn btn-primary btn-lg" type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>







